<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_splash"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/img_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:shadowColor="#00ff00"
        android:shadowRadius="100"/>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/rd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/sound_on"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="100dp"
                android:checked="true"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/trans" />


            <RadioButton
                android:id="@+id/sound_off"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/custom_radio_selector"
                android:checked="false"
                android:button="@color/trans" />


        </RadioGroup>
        <ImageView
            android:id="@+id/soff"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:button="@color/trans"
            android:background="@drawable/sound_on"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:button="@color/trans"
            android:background="@drawable/sound_off"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            />

        <RadioGroup
            android:id="@+id/rd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/music_on"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="100dp"
                android:checked="true"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/trans" />

            <RadioButton
                android:id="@+id/music_off"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/trans" />

        </RadioGroup>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:button="@color/trans"
            android:background="@drawable/music_on"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:button="@color/trans"
            android:background="@drawable/music_off"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/btn_res_score"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Reset Score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/rationale"
        android:gravity="center"
        android:shadowColor="#00ff00"
        android:shadowRadius="100"
        android:textColor="@color/white"
        android:textSize="30sp"/>
        

</androidx.constraintlayout.widget.ConstraintLayout>