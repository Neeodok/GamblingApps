<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_second_slots"
    tools:context=".games.FirstSlotsActivity">


    <View
        android:id="@+id/view"
        android:layout_width="315dp"
        android:layout_height="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/holder_first_slots"
        />

    <LinearLayout
        android:id="@+id/linear_pointer"
        android:layout_width="285dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" >
        <ScrollView
            android:id="@+id/scroll1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:scrollbars="none"
            >

            <LinearLayout
                android:id="@+id/holder1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </ScrollView>

        <ScrollView
            android:id="@+id/scroll2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:scrollbars="none"
            >

            <LinearLayout
                android:id="@+id/holder2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>
        <ScrollView
            android:id="@+id/scroll3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:scrollbars="none"
            >

            <LinearLayout
                android:id="@+id/holder3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </ScrollView>
        <ScrollView
            android:id="@+id/scroll4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:scrollbars="none"
            >

            <LinearLayout
                android:id="@+id/holder4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </ScrollView>

        <ScrollView
            android:id="@+id/scroll5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:scrollbars="none"
            >

            <LinearLayout
                android:id="@+id/holder5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>
    <Button
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <TextView
            android:id="@+id/btn_spin"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_first_slots"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="SPIN"
            android:textColor="@color/white"
            android:textSize="35sp"/>

        <TextView
            android:id="@+id/btn_down"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toStartOf="@+id/tv_bet_score"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/btn_up"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="45sp"/>

        <TextView
            android:id="@+id/btn_up"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toEndOf="@+id/tv_bet_score"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/btn_up"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="45sp"/>

        <TextView
            android:id="@+id/tv_bet_score"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:background="@drawable/tv_first_slots"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="100000"
            android:textColor="@color/white"
            android:textSize="40sp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/tv_win_score"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="@drawable/tv_first_slots"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="WIN"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_bank_score"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@drawable/tv_first_slots"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="Total"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>