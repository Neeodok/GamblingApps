<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sec_slots_land"
    tools:context=".games.FirstSlotsActivity">

    <View
        android:id="@+id/view"
        android:layout_width="315dp"
        android:layout_height="280dp"
        android:background="@drawable/holder_first_slots"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toEndOf="@id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_pointer"
        android:layout_width="285dp"
        android:layout_height="250dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/relativeLayout3">

        <ScrollView
            android:id="@+id/scroll1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/holder1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

        <ScrollView
            android:id="@+id/scroll2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/holder2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

        <ScrollView
            android:id="@+id/scroll3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/holder3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <ScrollView
            android:id="@+id/scroll4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/holder4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

        <ScrollView
            android:id="@+id/scroll5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/holder5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

    <Button
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="350dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp">


        <TextView
            android:id="@+id/btn_down"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/tv_bet_score"
            android:background="@drawable/btn_up"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/btn_up"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="25dp"
            android:layout_toEndOf="@+id/tv_bet_score"
            android:background="@drawable/btn_up"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/tv_bet_score"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/tv_first_slots"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="100000"
            android:textColor="@color/white"
            android:textSize="40sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_win_score"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tv_first_slots"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="WIN"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_bank_score"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="120dp"
            android:background="@drawable/tv_first_slots"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="Total"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/btn_spin"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="280dp"
            android:background="@drawable/btn_first_slots"
            android:fontFamily="@font/rationale"
            android:gravity="center"
            android:text="SPIN"
            android:textColor="@color/white"
            android:textSize="35sp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationWinLottie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            app:lottie_autoPlay="true"
            app:lottie_fileName="money_rain.json"
            app:lottie_loop="true" />


    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="450dp" />

</androidx.constraintlayout.widget.ConstraintLayout>